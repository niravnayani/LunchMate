<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.example.nickhalden.lunchmate.PlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="LunchMate"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:id="@+id/textViewHeading1" />

        <ImageButton
            android:id="@+id/imageButtonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Choice"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:id="@+id/textViewPlan" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">



        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView1"
                android:text="Free"
                android:layout_weight="1"
                android:background="#a09f9f"
                android:textColor="#000000"
                android:padding="18dp"
                android:gravity="center" />



            <TextView
                android:id="@+id/TextView2"
                android:text="Premium"
                android:layout_weight="1"
                android:background="#a09f9f"
                android:textColor="#000000"
                android:padding="18dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView3"
                android:text="Feature 1"
                android:layout_weight="1"
                android:padding="18dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:background="#FF909090" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView4"
                android:text="Feature 1"
                android:layout_weight="1"
                android:padding="18dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView5"
                android:text="Feature 2"
                android:layout_weight="1"
                android:padding="18dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:background="#FF909090" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView6"
                android:text="Feature 2"
                android:layout_weight="1"
                android:padding="18dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView7"
                android:text="Feature 3"
                android:layout_weight="1"
                android:padding="18dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:background="#FF909090" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView08"
                android:text="Feature 3"
                android:layout_weight="1"
                android:padding="18dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView9"
                android:text="Feature 4"
                android:layout_weight="1"
                android:padding="18dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:background="#FF909090" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView10"
                android:text="Feature 4"
                android:layout_weight="1"
                android:padding="18dip"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Free">
        </Button>
        <Button
            android:id="@+id/Button03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Premium">
        </Button>
    </LinearLayout>

</LinearLayout>
