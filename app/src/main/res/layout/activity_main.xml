<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.example.nickhalden.lunchmate.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="LunchMate"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:id="@+id/textViewHeading1" />

        <ImageButton
            android:id="@+id/imageButtonNext"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next" />


    </RelativeLayout>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:weightSum="1.0"
    android:gravity="center"
    >
    <Button
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_width="0dip"
        android:text="Sign In with LinkedIn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:drawableRight="@drawable/ic_action_linkedin"
        android:id="@+id/buttonLinkedIn"/>

</LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:text="Sign In with Facebook"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_action_facebook"
            android:id="@+id/buttonFacebook"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewLabel" />

    <!-- Dummy item to prevent EditText from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Username/Email address"
            android:singleLine = "true"
            android:id="@+id/editTextUsername"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Password"
            android:singleLine = "true"
            android:id="@+id/editTextPassword"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        tools:context="com.example.nickhalden.lunchmate.MainActivity">
    <CheckBox
        android:id="@+id/checkboxRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textSize="20sp"
            android:id="@+id/textViewRememberMe" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:text="Log In"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/buttonLogIn"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:text="Register"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:id="@+id/buttonRegister"/>

    </LinearLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't worry! We never post to LinkedIn."
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewDontWorry" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewTerms" />

</LinearLayout>
