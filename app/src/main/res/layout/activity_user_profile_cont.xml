<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.example.nickhalden.lunchmate.UserProfileContActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="LunchMate"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:id="@+id/textViewHeading1" />

        <ImageButton
            android:id="@+id/imageButtonNext"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next" />


    </RelativeLayout>

    <!-- Dummy item to prevent EditText from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Education *"
            android:singleLine = "true"
            android:id="@+id/editTextEducation"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Email address"
            android:singleLine = "true"
            android:id="@+id/editTextEmailaddress"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Phone Number"
            android:singleLine = "true"
            android:id="@+id/editTextPhoneNumber"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Skills"
            android:singleLine = "true"
            android:id="@+id/editTextSkills"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:hint="Languages"
            android:singleLine = "true"
            android:id="@+id/editTextLanguages"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageButtonNext7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/ic_action_linkedin" />

        <ImageView
            android:id="@+id/imageButtonNext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/ic_action_facebook" />

        <ImageView
            android:id="@+id/imageButtonNext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/ic_action_instagram" />

        <ImageView
            android:id="@+id/imageButtonNext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/ic_action_twitter" />


    </LinearLayout>



</LinearLayout>
